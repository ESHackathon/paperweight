<div class="my-4">
  <h1>Searches</h1>
</div>

<div class="my-4">
  <%= link_to 'New Search', new_search_path, class: "btn btn-primary" %>
</div>

<% @searches.each do |search| %>

  <div class="card mb-2">
    <div class="card-body">
      <h3 class="card-title"><%= search.created_at.to_formatted_s(:long) %></h3>
      <h6 class="card-subtitle mb-2 text-muted"><%= search.publications.first.title %>... <span class="badge badge-primary"><%= search.publications.count %> Publications uploaded</span></h6>
      <%= link_to 'Show', search, class: "card-link" %>
      <%= link_to 'Edit', edit_search_path(search), class: "card-link" %>
      <%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link" %>
    </div>
  </div>
<% end %>

