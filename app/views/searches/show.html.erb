<div class="mb-4">
  <h1>Search #<%= @search.id %></h1>
  <h3><%= @search.publications.count %> Uploaded Publications</h3>
</div>

<% @search.publications.each do |publication| %>
  <div class="card my-2">
    <div class="card-body">
      <h5 class="card-title"><%= fa_icon 'book' %> <%= publication.title %></h5>
      <p class="card-text">
        <%= publication.abstract %>
      </p>

      <%# <a href="#" class="card-link">Card link</a> %>
      <%# <a href="#" class="card-link">Another link</a> %>
    </div>
  </div>
<% end %>

<div class="my-4">
  <%= link_to 'Edit', edit_search_path(@search) %> |
  <%= link_to 'Back', searches_path %>
</div>
